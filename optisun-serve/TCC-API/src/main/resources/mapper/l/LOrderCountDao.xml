<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tcc.modules.l.dao.LOrderCountDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.tcc.modules.l.entity.LOrderCountEntity" id="lOrderCountMap">
        <result property="id" column="id"/>
        <result property="custId" column="cust_id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="goodsLevel" column="goods_level"/>
        <result property="goodsOrderCount" column="goods_order_count"/>

    </resultMap>
    <select id="getCountByLevel" resultType="java.lang.Integer" parameterType="java.lang.Long">
        select
         IFNULL(SUM(goods_order_count), 0) as goodsOrderCount
        from
            l_order_count
        where
            cust_id = #{custId}
            <![CDATA[ and goods_level >= #{goodsLevel} ]]>
    </select>

</mapper>