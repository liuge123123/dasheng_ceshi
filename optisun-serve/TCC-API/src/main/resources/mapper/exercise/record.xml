<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tcc.modules.exercise.dao.RecordDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.tcc.modules.exercise.entity.RecordEntity" id="custMap">
        <result property="id" column="id"/>
        <result property="luckyDrawId" column="lucky_draw_id"/>
        <result property="prizeId" column="prize_id"/>
        <result property="userId" column="user_id"/>
        <result property="drawTime" column="draw_time"/>
        <result property="isHit" column="is_hit"/>
        <result property="hitPrize" column="hit_prize"/>
        <result property="createTime" column="create_time"/>
        <result property="createBy" column="create_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="delFlag" column="del_flag"/>
    </resultMap>

    <select id="getDetailById" resultType="java.util.Map" parameterType="java.util.Map">
        SELECT
        p.prize_type as prizeType,
        p.prize_name as prizeName,
        p.prize_value as prizeValue,
        p.ratio,
        l.name,
        l.start_time startTime,
        l.end_time as endTime,
        l.description,
        l.create_time as createTime
        FROM exercise_record m
        left join exercise_prize p on m.prize_id = p.id
        left join exercise_lucky_draw l on m.lucky_draw_id = l.id
        <where>
            m.del_flag = 0
            <if test="condition.id!=null  and condition.id!= ''">
                and m.id = #{condition.id}
            </if>
        </where>
        order by m.create_time desc
    </select>
</mapper>